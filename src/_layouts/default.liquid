<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }} pb-12">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main class="max-w-3xl mx-auto">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
<script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
<script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
<script src="https://unpkg.com/bluesky-comments@0.3.0/dist/bluesky-comments.umd.js"></script>
