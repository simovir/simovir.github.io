---
layout: default
---

<div style="background-image: url('{{ data.image }}'); view-transition-name: post-image-{{data.id}}" class="block w-full my-6 bg-center bg-cover cover-image aspect-video {{data.class}}"></div>
<div class="w-full max-w-none">
  <h1>{{ data.title }}</h1>
  <span>{{ data.date | date: "%d.%m.%Y"}}</span>
  <div class="mt-6 prose prose-invert prose-zinc max-w-none">{{ content }}</div>
</div>

